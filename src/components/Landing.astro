import aena from "../assets/landing_wifi.jpg";
---

<img src={aena.src} alt="AENA Mail Wifi" />

<style>
  html,
  body {
    margin: 0;
    padding: 0;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
